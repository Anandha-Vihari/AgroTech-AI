#######js##########
document.getElementById("addProductForm").addEventListener("submit", function(event) {
    event.preventDefault(); // Prevent the form from submitting the traditional way

    // Get values from the form fields
    const farmerName = document.getElementById("farmerName").value;
    const farmerEmail = document.getElementById("farmerEmail").value;
    const productName = document.getElementById("productName").value;
    const productWeight = document.getElementById("productWeight").value;
    const productPrice = document.getElementById("productPrice").value;
    const productDetails = document.getElementById("productDetails").value;

    // Calculate total price
    const totalPrice = productWeight * productPrice;

    // Create a new list item for the product
    const productItem = document.createElement("li");
    productItem.textContent = `${farmerName} (${farmerEmail}) - ${productName}: ${productWeight} kg @ ₹${productPrice}/kg | Total: ₹${totalPrice} | Details: ${productDetails}`;

    // Append the new product to the list
    document.getElementById("products").appendChild(productItem);

    // Clear the form fields
    document.getElementById("addProductForm").reset();
});
